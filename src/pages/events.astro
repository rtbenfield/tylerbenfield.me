    <section class="past">
      <h2>Past Events</h2>
      <section class="event">
        <FontAwesomeIcon class="icon" icon={faComment} />
        <h3>
          <a
            href="https://www.epicweb.dev/talks/epic-app-performance-starts-with-the-database"
            target="_blank">Epic App Performance Starts with the Database</a>
        </h3>
        <div class="event-name">
          <a href="https://www.epicweb.dev/conf/2024" target="_blank">Epic Web Conf</a>
