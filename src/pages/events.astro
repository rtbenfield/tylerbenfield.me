<style>
  main {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-xl);
  }

  .past, .upcoming {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-md);
  }

  .event {
    display: grid;
    gap: var(--spacing-xs) var(--spacing-md);
    grid-template-columns: min-content 1fr;
    grid-template-areas: "icon title" "icon event-name" "icon date" "icon content";
  }

  .event .icon {
    grid-area: icon;
    font-size: 3rem;
  }
  .event h3 {
    grid-area: title;
  }
  .event .event-name {
    grid-area: event-name;
  }
  .event .event-name a {
    text-decoration: none;
  }
  .event .date {
    font-size: 0.8rem;
    grid-area: date;
  }
  .event .content {
    display: grid;
    gap: var(--spacing-xs);
    grid-area: content;
  }
  .event .links {
    padding: var(--spacing-sm) 0;
  }

  .button {
    background-color: var(--nord8);
    border-radius: var(--radius-sm);
    color: var(--nord1);
    padding: var(--spacing-xs) var(--spacing-sm);
    text-decoration: none;
  }

  h3 > a {
    text-decoration: none;
  }
</style>
